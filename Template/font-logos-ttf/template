# Template file for 'font-logos-ttf'
pkgname=font-logos-ttf
version=1.3.0
revision=1
archs="x86_64"
hostmakedepends="yarn jq fontforge"
short_desc="An icon font providing popular Linux distro logos."
maintainer="ErenHDE <erenozturkhde@gmail.com>"
font_dirs="/usr/share/fonts/TTF"
license="Unlicense"
homepage="https://github.com/lukas-w/font-logos"
distfiles="https://github.com/lukas-w/font-logos/archive/refs/tags/v${version}.tar.gz"
checksum=617e16a05940f2e32f72eb9d3dedc8d6077c8f86bd75d2ed24f7d6333fb5eeed

do_build(){
  sed -i '/^$(dest)\/readme-header.png/d' Makefile
  sed -i '/^.*wkhtmltoimage/d' Makefile
  yarn install
  make
}

do_install(){
	vinstall assets/font-logos.ttf 644 usr/share/fonts/TTF
    vlicense LICENSE
}
